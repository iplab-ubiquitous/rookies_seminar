\newcommand{\mktitle}{%
    \newtitle{\gomytitle}{\gomysecnum}{\gomysecname}
    \begin{flushright}
        【IPLAB 第{\gomynumber}回新人ゼミ資料】 {\myyear}年{\mymonth} 月
        {\myday} 日(\myweek) \par%
        担当 : \gomynamej (\gomynamee)%
    \end{flushright}
    \advance \page by 1
}

%タイトル生成
\newcommand{\newtitle}[3]{
    \ifnum \page>1%
        \newpage
    \fi
    \begin{center}
        {\Large\textbf {#1}} \par
        \vspace{1em}
        {\large\textbf section 0{#2} : {#3}}
    \end{center}
} 
